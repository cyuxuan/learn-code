<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="club.beenest.blog.dao.BlogDao">

    <!--查询最新公开博客-->
    <select id="getNewBlogListByIsPublished" resultType="club.beenest.blog.entity.NewBlog">
        select id, title, password
        from blog
        where is_published = true
        order by create_time desc
        limit #{limit}
    </select>

</mapper>